<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveClip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_clip"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/ivAlbumArt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/music"
        android:layout_centerInParent="true"
        android:contentDescription="@string/album_art" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAlbumArt"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="@string/podcast_mp3"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/ivRewind5s"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/img_rewind_5s"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/play" />
        <ImageView
            android:id="@+id/ivRewind10s"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/img_rewind_10s"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/play" />
        <ImageView
            android:id="@+id/ivRewind30s"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_rewind_30s"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/play" />
        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/img_play"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/play" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMarkClip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mark_clip_end"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>